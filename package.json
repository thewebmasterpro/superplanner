{
  "name": "superplanner",
  "version": "1.0.0",
  "description": "Superplanner - Task Management & CRM for small business with Vite + React + Express",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && node --watch index.js",
    "dev:client": "cd client && vite",
    "build": "npm run install:all && npm run build:client",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install && cd ..",
    "build:client": "cd client && vite build",
    "build:server": "cd server && npm install",
    "start": "node server/index.js",
    "setup-db": "node server/scripts/setup-db.js",
    "preview": "cd client && vite preview",
    "postinstall": "npm run install:all"
  },
  "keywords": ["crm", "task-management", "planning", "vite", "react", "express", "mysql"],
  "author": "Anouar <thewebmaster.pro>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thewebmasterpro/superplanner.git"
  },
  "homepage": "https://sp.thewebmaster.pro",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "buildConfig": {
    "framework": "vite",
    "outputDir": "server/public",
    "buildCommand": "npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
