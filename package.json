{
  "name": "superplanner",
  "version": "1.0.0",
  "description": "Superplanner - Task Management & CRM for small business with Vite + React + Express",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && node --watch index.js",
    "dev:client": "vite",
    "build": "vite build",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install && cd ..",
    "build:client": "vite build",
    "build:server": "cd server && npm install",
    "start": "node server/index.js",
    "setup-db": "node server/scripts/setup-db.js",
    "preview": "vite preview"
  },
  "keywords": ["crm", "task-management", "planning", "vite", "react", "express", "mysql"],
  "author": "Anouar <thewebmaster.pro>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thewebmasterpro/superplanner.git"
  },
  "homepage": "https://sp.thewebmaster.pro",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "buildConfig": {
    "framework": "vite",
    "outputDir": "server/public",
    "buildCommand": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.2",
    "vite": "^5.0.8",
    "@vitejs/plugin-react": "^4.2.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
